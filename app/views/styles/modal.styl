#timer-modal, #stats-modal, #options-modal
    .modal-header
        #cancel
            text-align right

    .modal-body
        min-height 100px
        margin-top 40px
        text-align center
        font-family "Lucida Sans Unicode" "Lucida Grande" sans-serif

        #timer
            margin 5px 0px 0px 5px
            font-size 80px
            text-shadow 4px 4px 5px #D3D3D3

        #stats
            font-size 24px
            text-shadow none